let navMain = document.querySelector('.navigation__list');
let navToggle = document.querySelector('.nav-control');

//navMain.classList.remove('main-nav--nojs');

navToggle.addEventListener('click', function () {
  if (navMain.classList.contains('navigation__list--hidden')) {
    navMain.classList.remove('navigation__list--hidden');
    navToggle.classList.add('nav-control--close');
  } else {
    navMain.classList.add('navigation__list--hidden');
    navMain.classList.remove('nav-control--open]');
  }
});
